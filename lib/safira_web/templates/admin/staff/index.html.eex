<section id="torch-toolbar">
  <div class="torch-container">
    <%= link "New Staff", to: Routes.admin_staff_path(@conn, :new) %>
  </div>
</section>
<section id="torch-index-content">
  <div class="torch-container">
    <section id="torch-filters">
      <h3>Find Staffs</h3>
      <%= form_tag @conn.request_path, method: :get, id: "torch-filters-form" do %>

        <div class="field">
            <label>Active</label>
            <%= filter_assoc_select(:staff, :active, [{"true", true}, {"false", false}], @conn.params) %>
        </div>

        
        <button type="submit" class="torch-button">Search</button>
        <%= link "Clear Filters", to: Routes.admin_staff_path(@conn, :index) %>
      <% end %>

    </section>

    <section id="torch-table">
    <%= if length(@staffs) > 0 do %>
      <table>
        <thead>
          <tr>

            <th><span>Email</span></th>

            <th><%= table_link(@conn, "Active", :active) %></th>
            
            <th><span>Actions</span></th>
          </tr>
        </thead>
        <tbody>
          <%= for staff <- @staffs do %>
            <tr>

              <td><%= staff.user.email %></td>

              <td><%= staff.active %></td>
              
              <td class="torch-actions">
                <span><%= link "Show", to: Routes.admin_staff_path(@conn, :show, staff) %></span>
                <span><%= link "Edit", to: Routes.admin_staff_path(@conn, :edit, staff) %></span>
                <span><%= link "Delete", to: Routes.admin_staff_path(@conn, :delete, staff), method: :delete, data: [confirm: "Are you sure?"] %></span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= render Torch.PaginationView, "_pagination.html", assigns %>
    <% else %>
      <p class="torch-no-data">No Staffs match your search.</p>
    <% end %>
    </section>
  </div>
</section>
