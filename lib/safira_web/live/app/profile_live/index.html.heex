<.page title="Profile">
  <:actions>
    <.button>
      <.icon name="hero-edit" class="w-5 h-5" />
    </.button>
  </:actions>
</.page>

<.modal :if={@live_action in [:edit]} id="profile-modal" show on_cancel={JS.patch(~p"/")}>
  <.live_component
    module={SafiraWeb.App.ProfileLive.FormComponent}
    id="profile"
    current_user={@current_user}
    action={@live_action}
    patch={~p"/"}
    page_title={@page_title}
  />
</.modal>
