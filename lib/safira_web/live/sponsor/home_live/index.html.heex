<.page
  title={gettext("Hello, %{company_name} ðŸ‘‹", company_name: @current_user.name)}
  title_class="font-terminal uppercase"
  size={:xl}
>
  <h2><%= gettext("Visitors") %></h2>

  <.table_search
        id="visitor-table-name-search"
        params={@params}
        field={:name}
        path={~p"/sponsor/"}
        placeholder={gettext("Search for visitors")}
      />

  <ul
    id="visitors-list"
    class="grid grid-cols-2 md:grid-cols-4"
    phx-update="stream"
  >
    <.attendee
      :for={{id, redeem} <- @streams.redeems}
      id={id}
      user={redeem.attendee.user}
    />
  </ul>

  <.pagination meta={@meta} params={@params} />
</.page>
